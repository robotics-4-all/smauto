Metadata:
    name: SimpleHomeAutomation
    version: "0.1.0"
    description: "Simple home automation model."
    author: "klpanagi"
    email: "klpanagi@gmail.com"

MQTT:
    name: cloud_platform_issel
    host: "localhost"
    port: 1883
    credentials:
        username: ""
        password: ""

Entity:
    name: bedroom_lamp
    type: actuator
    topic: "bedroom.lamp"
    broker: cloud_platform_issel
    attributes:
        - power: bool

Entity:
    name: motion_detector
    type: sensor
    topic: "bedroom.motion_detector"
    broker: cloud_platform_issel
    attributes:
        - detected: bool -> replay([true, false, false, false], 10)
        - posX: int
        - posY: int
        - pos: list -> replay("~/recorded_data")
        - mode: str

Automation:
    name: motion_detected_2
    condition:
        (motion_detector.detected is true) AND
        (motion_detector.posX == 10)
    enabled: true
    continuous: true
    actions:
        - bedroom_lamp.power: true
